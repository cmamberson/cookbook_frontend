<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Add Recipe</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<!-- //Adding ingredients form -->
<h2>Add Ingredients</h2>
<select id="recipe_id" name="id">
      <option value="">Choose a recipe</option>
      <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
        <% recipes.forEach(function(recipe){ %>
          <option value="<%= recipe.id %>">
            <%= recipe.title %>
          </option>
        <% }) %>
      <% } %>
  </select>

<div>
<table>
  <thead>
    <tr>
      <th>Ingredient Name</th>
      <th> Unit Of Measure</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody id="ingredientList">
  </tbody>
</table>
</div>


<form action="/recipe/:id/create_ingredients" method="POST" class="form-horizontal" id="addIngredientForm">
  <div class="form-group">
    <label for="ingredient_name" class="col-sm-2 control-label">Ingredients</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="foodItem" name="foodItem" placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <label for="quantity" class="col-sm-2 control-label">Quantity</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="quantity" name="quantity" placeholder="example">
    </div>
  </div>
  <div class="form-group">
    <label for="unitOfMeasure" class="col-sm-2 control-label">Unit of Measure</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="measureUnit" name="measureUnit" placeholder="example">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" id="ingredientsButton">Add Ingredient</button>
    </div>
  </div>
</form>
