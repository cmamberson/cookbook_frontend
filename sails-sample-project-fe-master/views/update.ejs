<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Edit Recipe</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="recipe_id">Select A Recipe To Update</label><br/>
    <select id="recipe_id" name="recipe_id">
    <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
      <% recipes.forEach(function(recipe){ %>
        <option value="<%= recipe.recipe_id %>">
          <%= recipe.last_name + ", " +  recipe.first_name %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Update Recipe</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateRecipeForm">
  <input type="hidden" name="recipe_id" id="recipe_id" value="">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title" placeholder="example">
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="description" name="description" placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <label for="numberOfMinutes" class="col-sm-2 control-label">Number of Minutes</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="numberOfMinutes" name="numberOfMinutes"  placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <label for="ingredients" class="col-sm-2 control-label">Ingredients </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="ingredients" name="ingredients" placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <label for="instructions" class="col-sm-2 control-label">Instructions</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="instructions" name="instructions" placeholder="example">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Recipe</button>
    </div>
  </div>
</form>
