<!-- add recipe form -->
<h2>Add Recipe</h2>
<form action="/create" method="POST" class="form-horizontal" id="addRecipeForm">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title" placeholder="example">
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="description" name="description" placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <label for="numberOfMinutes" class="col-sm-2 control-label">Number of Minutes</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="numberOfMinutes" name="numberOfMinutes"  placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Recipe</button>
    </div>
  </div>
</form>
