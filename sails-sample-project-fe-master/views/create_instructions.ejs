<%- partial ('partials/statusmessage.ejs') %>


<!-- //Adding instructions form -->
<h2> Add Instructions</h2>
<select id="recipe_id" name="recipe_id">
      <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
        <% recipes.forEach(function(recipe){ %>
          <option value="<%= recipe.recipe_id %>">
            <%= recipe.title %>
          </option>
        <% }) %>
      <% } %>
      </select>
<form action="/create" method="POST" class="form-horizontal" id="addInstructionsForm">
  <div class="form-group">
    <label for="instructions" class="col-sm-2 control-label">Ingredients </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="instructions" name="instructions" placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Instructions</button>
    </div>
  </div>
</form>
