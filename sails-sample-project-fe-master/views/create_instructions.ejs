    <li><a href="/">Home</a></li>
    <li class="active">Add Instructions</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>


<!-- //Adding instructions form -->
<h2> Add Instructions</h2>
<select id="recipe_id" name="id">
      <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
        <% recipes.forEach(function(recipe){ %>
          <option value="<%= recipe.id %>">
            <%= recipe.title %>
          </option>
        <% }) %>
      <% } %>
      </select>

      <div>
      <table>
        <thead>
          <tr>
            <th>Step Number</th>
            <th> Instruction</th>
          </tr>
        </thead>
        <tbody id="instructionsList">
        </tbody>
      </table>
      </div>
<form action="/recipe/:id/create_instructions" method="POST" class="form-horizontal" id="addInstructionsForm">
  <div class="form-group">
    <label for="instructions" class="col-sm-2 control-label">Instruction</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="step" name="step" placeholder="example" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" id="instructionsButton">Add Instructions</button>
    </div>
  </div>
</form>
