<!-- //Adding ingredients form -->
<h2>Delete Ingredients</h2>
<select id="recipe_id" name="recipe_id">
      <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
        <% recipes.forEach(function(recipe){ %>
          <option value="<%= recipe.id %>">
            <%= recipe.title %>
          </option>
        <% }) %>
      <% } %>
  </select>

<div>
<table>
  <thead>
    <tr>
      <th>Ingredient Name</th>
      <th> Unit Of Measure</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody id="deleteIngredientList">
  </tbody>
</table>
</div>
